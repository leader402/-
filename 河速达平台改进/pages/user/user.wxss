/* pages/user/user.wxss */
.bar{
  background-color: #226ddd!important;
  color:#fff;
}
.info{
  height: 200rpx;
  padding: 50rpx;
  background-color: #1a94e6;
}
.info-img{
  border-radius: 50%;
  height: 200rpx;
  width: 200rpx;

}
.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin: 5rpx;
  margin-top: 10rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.userinfo-username{
  margin-left: 30rpx;
}
.info-text{
  display: inline-block;
  margin-left:50rpx; 
}
.info-num{
  margin-top: 130rpx;
  font-size: 30rpx;
   margin-left: 50rpx;
  color:#fff;
}
.info-num1{
   margin-top: 80rpx;
   margin-left: 50rpx;
   font-size: 30rpx;
   color:#fff;
}
.user-btn{
  height: 200rpx;
  font-size: 35rpx;
  text-align: center;
  padding: 20rpx;
}
.user-btn>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}